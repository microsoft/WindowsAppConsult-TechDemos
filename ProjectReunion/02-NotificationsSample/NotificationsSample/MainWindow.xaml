<Window x:Class="NotificationsSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotificationsSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Send toast notification" Click="OnSendNotification" />
        <Button Content="Send hero notification" Click="OnSendHeroNotification" />
        <Button Content="Send interactive notification" Click="OnSendInteractiveNotification" />
        <Button Content="Send progress notification" Click="OnShowToast" />

        <TextBlock x:Name="txtStatus" />
    </StackPanel>
</Window>
